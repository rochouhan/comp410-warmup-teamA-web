@using System.Security.Cryptography.X509Certificates
@model TableViewModel
@{
    ViewData["Title"] = "Home Page";
}


<h1>@ViewData["Title"]</h1>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Query Parameters</legend>
        <div>
            <input id="btnAddQuery" type="button"
                   onclick="addRow();" value="Add Query" />
        </div>
        <table class="table" aria-labelledby="tabelLabel">
            <thead>
                <tr>
                    <td>Key</td>
                    <td>op</td>
                    <td>Value</td>
                    <td></td>
                </tr>
            </thead>
            <tbody id="tbQueries">
            </tbody>
        </table>
        <p>
            <input type="submit" value="Query" />
        </p>
    </fieldset>
}

<script language="javascript" type="text/javascript">
    function addRow() {
        var index = $("#tbQueries").children("tr").length;

        var indexCell = "<td style='display:none'><input name='Index' type='hidden' value='" + index + "' /></td>";
        var keyCell = "<td><input id='Queries_" + index + "__Title' name='[" + index + "].Key' type='text' value='' /></td>";
        var opCell = "<td><select id='Queries_" + index + "_Title' name='[" + index + "].Op'>" +
            "<option value='eq'>=</option><option value='lt'><</option><option value='gt'>></option></select>";
        var valueCell = "<td><input id='Queries_" + index + "__Title' name='[" + index + "].Value' type='text' value='' /></td>";
        var removeCell = "<td><input id='btnAddQuery' type='button' value='Remove' onclick='removeRow(" + index + ");' /></td>";

        var newRow = "<tr id='trQuery" + index + "'>" + 
            indexCell + keyCell + opCell + valueCell + removeCell + "</tr>";
        $("#tbQueries").append(newRow);
    }

    function removeRow(id) {
        var controlToBeRemoved = "#trQuery" + id;
        $(controlToBeRemoved).remove();
    }
</script>

<table class="table table-striped" aria-labelledby="tabelLabel">
        <thead>
            <tr>
                <th>User ID</th>
                <th>Date</th>
                <th>Additional Information</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var data in Model.table)
            {
                if (data != null)
                {
                    string s = string.Join("; ", data.otherinfo.Select(x => x.Key + ": " + x.Value).ToArray());
                    <tr>
                        <td>@data.uid</td>
                        <td>@data.date</td>
                        <td>@s</td>
                    </tr>

                }
            }
        </tbody>
    </table>